{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "./dist",
		"rootDir": "./src",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": false,
		"rewriteRelativeImportExtensions": true
	},
	"include": ["src"],
	"exclude": ["reference", "node_modules"]
}
